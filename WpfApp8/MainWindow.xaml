<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="104,0,0,0" VerticalAlignment="Center" Height="44" Width="89" Click="addButton_Click" />
        <Button x:Name="removeButton" Content="Remove" HorizontalAlignment="Left" Margin="315,0,0,0" VerticalAlignment="Center" Height="45" Width="85" Click="removeButton_Click" />
        <Button x:Name="showButton" Content="Show All" HorizontalAlignment="Left" Margin="533,0,0,0" VerticalAlignment="Center" Height="45" Width="87" Click="Button_Click_1"/>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="104,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="516"/>
        <TextBlock HorizontalAlignment="Left" Margin="104,115,0,0" TextWrapping="Wrap" Text="Enter Number Here" VerticalAlignment="Top"/>

    </Grid>
</Window>
